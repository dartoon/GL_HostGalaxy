import numpy as np
a=np.zeros([20])
b=np.zeros([20])
c=np.zeros([20])
for l in range(30,50):
     f1=open('galfit.{0}'.format(l+1),'r')
     line1 = f1.readlines()[41]                #out put mag
     #print float(line[4:11]) 
     a[l-30]=float(line1[4:11])   
     f1.close
     f2=open('galfit.{0}'.format(l+1),'r')
     line2 = f2.readlines()[43]                #out put n
     #print float(line[4:11]) 
     b[l-30]=float(line2[4:11])
     f2.close
     f3=open('galfit.{0}'.format(l+1),'r')
     line3 = f3.readlines()[42]                #out put R_re
     #print float(line[4:11]) 
     c[l-30]=float(line3[4:11])
     f3.close
a=np.asarray(a)
b=np.asarray(b)
c=np.asarray(c)
t=np.r_[a[None,:],b[None,:],c[None,:]].T
#print c
g=open('gal_result','w')
np.savetxt(g,c,fmt='%6.5f')
g.close

#for fixed n with only one out put row
a=np.zeros([30])
for l in range(30):
  if l<9 :
     f=open('galfit.0{0}'.format(l+1),'r')
     line1 = f.readlines()[41]
     #print float(line[4:11]) 
     a[l]=float(line1[4:11]) 
  else:
     f=open('galfit.{0}'.format(l+1),'r')
     line1 = f.readlines()[41]
     #print float(line[4:11]) 
     a[l]=float(line1[4:11]) 
a=np.asarray(a)
g=open('mag_result_n','w')
np.savetxt(g,a,fmt='%6.5f')
g.close

