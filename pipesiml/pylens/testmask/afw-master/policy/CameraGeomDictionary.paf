#<?cfg paf dictionary ?>
#
target: CameraGeomPolicy

definitions: {
    Camera: {
        type: Policy
        dictionary: {
            target: "Camera"
            definitions: {
                serial: {
                    type: int
                    description: "Camera's serial number"
                    minOccurs: 0
                    maxOccurs: 1
                    default: -1
                }
                name: {
                    type: string
                    description: "Camera's name"
                    minOccurs: 0
                    maxOccurs: 1
                    default: "Unknown"
                }
                nCol: {
                    type: int
                    description: "Number of columns of Rafts"
                    minOccurs: 1
                    maxOccurs: 1
                }
                nRow: {
                    type: int
                    description: "Number of rows of Rafts"
                    minOccurs: 1
                    maxOccurs: 1
                }
                Raft: {
                    type: policy
                    dictionary: {
                        target: Raft
                        definitions: {
                            serial: {
                                type: int
                                description: "Raft's serial number"
                                minOccurs: 0
                                maxOccurs: 1
                                default: -1
                            }
                            name: {
                                type: string
                                description: "Name of this raft"
                                minOccurs: 0
                                maxOccurs: 1
                                default: "None"
                            }
                            index: {
                                type: int
                                description: "Location of Raft in Camera thought of as a grid of Rafts"
                                minOccurs: 2
                                maxOccurs: 2
                            }
                            offset: {
                                type: double
                                description: "offset of Raft center from boresight, (x, y); mm"
                                minOccurs: 2
                                maxOccurs: 2
                            }
                        }
                    }
                }


        Distortion: {
            type: Policy
            dictionary: {
            target: Distortion
            definitions: {
                            active: {
                                type: string
                                description: "Which distortion is to be used."
                                minOccurs: 0
                                maxOccurs: 1
                default: "NullDistortion"
                            }

                NullDistortion: {
                type: policy
                description: "An identity (ie. no-op) distortion."
                minOccurs: 0
                maxOccurs: 1
                dictionary: {
                    target: NullDistortion
                    definitions: {
                                        x: {
                                            type: int
                        description: "Dummy so pexPolicy sees NullDistortion Policy"
                        minOccurs: 0
                        maxOccurs: 1
                        default: 0
                    }
                    }
                }
                }
                RadialPolyDistortion: {
                type: policy
                description: "A radial polynomial distortion."
                minOccurs: 0
                maxOccurs: 1
                dictionary: {
                    target: RadialPolyDistortion
                    definitions: {
                    coeffs: {
                        type: double
                        description: "Polynomial terms for radial distortion."
                        minOccurs: 0
                        maxOccurs: 7
                        default: 0.0 1.0
                    }
                    coefficientsDistort: {
                        type: bool
                        description: "Polynomial describes the *forward* transform."
                        minOccurs: 0
                        maxOccurs: 1
                        default: true
                    }
                    }
                }
                }
            }
            }
        }
            }
        }
    }

    Raft: {
        type: Policy
        dictionary: {
            target: "Raft"
            definitions: {
                serial: {
                    type: int
                    description: "Raft's serial number"
                    minOccurs: 0
                    maxOccurs: 1
                    default: -1
                }
                name: {
                    type: string
                    minOccurs: 0
                    maxOccurs: 1
                    default: "None"
                }
                nCol: {
                    type: int
                    description: "Number of columns of CCDs"
                    minOccurs: 1
                    maxOccurs: 1
                }
                nRow: {
                    type: int
                    description: "Number of rows of CCDs"
                    minOccurs: 1
                    maxOccurs: 1
                }
                Ccd: {
                    type: policy
                    dictionary: {
                        target: Ccd
                        definitions: {
                            serial: {
                                type: int
                                description: "CCD's serial number"
                                minOccurs: 0
                                maxOccurs: 1
                                default: -1
                            }
                            name: {
                                type: string
                                minOccurs: 0
                                maxOccurs: 1
                                default: "None"
                            }
                            ptype: {
                                type: string
                                description: "Type of Ccd"
                                minOccurs: 1
                                maxOccurs: 1
                                default: "default"
                            }
                            index: {
                                type: int
                                description: "Location of CCD in Raft thought of as a grid of CCDs"
                                minOccurs: 2
                                maxOccurs: 2
                            }
                            offset: {
                                type: double
                                description: "offset of CCD center from raft center, (x, y); mm"
                                minOccurs: 2
                                maxOccurs: 2
                            }
                            nQuarter: {
                                type: int
                                description: "Number of quarter-turns applied to CCD when put into Raft"
                                minOccurs: 0
                                maxOccurs: 1
                                default: 0
                            }
                            orientation: {
                                type: double
                                description: "pitch, roll, yaw; degrees"
                                minOccurs: 3
                                maxOccurs: 3
                                default: 0.0 0.0 0.0
                            }
                        }
                    }
                }
            }
        }
    }

    Ccd: {
        type: Policy
        dictionary: {
            target: "Ccd"
            definitions: {
                ptype: {
                    type: string
                    description: "Type of ccd so cameras can use multiple types of detectors"
                    minOccurs: 1
                    maxOccurs: 1
                    default: "default"
                }
                pixelSize: {
                    type: double
                    description: "Pixel size in microns"
                    minOccurs: 1
                    maxOccurs: 1
                }

                offsetUnit: {
                    type: string
                    description: "Units used for 'offset' values of CCD centers."
                    minOccurs: 1
                    maxOccurs: 1
                    default: "mm"
                    allowed: {
                        value: "mm"
                        description: "Millimeters"
                    }
                    allowed: {
                        value: "pixels"
                        description: "Pixels"
                    }
                }
                nCol: {
                    type: int
                    description: "Number of columns of amps; 2 == Left and Right"
                    minOccurs: 1
                    maxOccurs: 1
                }
                nRow: {
                    type: int
                    description: "Number of rows of amps"
                    minOccurs: 1
                    maxOccurs: 1
                }
                Amp: {
                    type: policy
                    dictionary: {
                        target: Amp
                        definitions: {
                            serial: {
                                type: int
                                description: "Serial number for this Amp"
                                minOccurs: 1
                                maxOccurs: 1
                            }
                            ptype: {
                                type: string
                                description: "Type of amp"
                                minOccurs: 1
                                maxOccurs: 1
                                default: "default"
                            }
                            index: {
                                type: int
                                description: "Location of Amp in CCD thought of as a grid of amplifiers"
                                minOccurs: 2
                                maxOccurs: 2
                            }
                            flipLR: {
                                type: bool
                                description: "Does then data need to be flipped left <--> right?"
                                minOccurs: 0
                                maxOccurs: 1
                                default: false
                            }
                            nQuarter: {
                                type: int
                                description: "Number of rotations to apply to the amp to fit it in the detector in camera coordinates"
                                minOccurs: 0
                                maxOccurs: 1
                            }
                            hdu: {
                                type: int
                                description: "HDU the data's found in"
                                minOccurs: 0
                                maxOccurs: 1
                                default: 0
                            }
                            diskCoordSys: {
                                type: string
                                description: "I can concieve of 3 different options for how the pixels are held on disk: amp (electronic), sensor, and camera coordinates"
                                minOccurs: 1
                                maxOccurs: 1
                            }
                        }
                    }
                }
            }
        }
    }
    #
    # Now define an Amp within a Ccd
    #
    Amp: {
        type: policy
        dictionary: {
            target: Amp
            definitions: {
                ptype: {
                    type: string
                    minOccurs: 1
                    maxOccurs: 1
                    default: "default"
                }
                biassec: {
                    type: int
                    description: "Bias section on the chip in zero-based readout coordinates: minx, miny, maxx, maxy"
                    minOccurs: 4
                    maxOccurs: 4
                }
                datasec: {
                    type: int
                    description: "Data section on the chip in zero-based readout coordinates: minx, miny, maxx, maxy"
                    minOccurs: 4
                    maxOccurs: 4
                }
                ewidth: {
                    type: int
                    description: "Width in pixels of the raw data"
                    minOccurs: 1
                    maxOccurs: 1
                }
                eheight: {
                    type: int
                    description: "Height in pixels of the raw data"
                    minOccurs: 1
                    maxOccurs: 1
                }
            }
        }
    }
    #
    # Electronic properties of the detectors
    #
    Electronic: {
        type: policy
        dictionary: {
            target: Electronic
            definitions: {
                Raft: {
                    type: policy
                    dictionary: {
                        target: Raft
                        definitions: {
                            serial: {
                                type: int
                                description: "Raft's serial number"
                                minOccurs: 0
                                maxOccurs: 1
                                default: -1
                            }
                            name: {
                                type: string
                                description: "Name of this raft"
                                minOccurs: 0
                                maxOccurs: 1
                                default: "None"
                            }
                            Ccd: {
                                type: policy
                                dictionary: {
                                    target: Ccd
                                    definitions: {
                                        serial: {
                                            type: int
                                            description: "Ccd's serial number"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: -1
                                        }
                                        name: {
                                            type: string
                                            description: "Name of this Ccd"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: "None"
                                        }
                                        ptype: {
                                            type: string
                                            description: "Type of the Ccd"
                                            minOccurs: 1
                                            maxOccurs: 1
                                            default: "default"
                                        }
                                        Amp: {
                                            type: policy
                                            dictionary: {
                                                target: Amp
                                                definitions: {
                                                    index: {
                                                        type: int
                                                        description: "Location of Amp in CCD thought of as a grid of amplifiers"
                                                        minOccurs: 2
                                                        maxOccurs: 2
                                                    }
                                                    gain: {
                                                        type: double
                                                        default: 1.0
                                                    }
                                                    readNoise: {
                                                        type: double
                                                        default: 10.0
                                                    }
                                                    saturationLevel: {
                                                        type: double
                                                        default: 65535.0
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
    #
    # Defects in a Detector
    #
    Defects: {
        type: Policy
        dictionary: {
            target: "DefectList"
            definitions: {
                Raft: {
                    type: policy
                    dictionary: {
                        target: Raft
                        definitions: {
                            serial: {
                                type: int
                                description: "Raft's serial number"
                                minOccurs: 0
                                maxOccurs: 1
                                default: -1
                            }
                            name: {
                                type: string
                                description: "Name of this raft"
                                minOccurs: 0
                                maxOccurs: 1
                                default: "None"
                            }
                            Ccd: {
                                type: policy
                                dictionary: {
                                    target: Ccd
                                    definitions: {
                                        serial: {
                                            type: int
                                            description: "Detector's serial number"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: -1
                                        }
                                        name: {
                                            type: string
                                            description: "Detector's name"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: "Unknown"
                                        }
                                        Defect: {
                                            type: Policy
                                            dictionary: {
                                                target: "Defect"
                                                definitions: {
                                                    x0: {
                                                        type: int
                                                        description: "Starting column"
                                                        minOccurs: 1
                                                        maxOccurs: 1
                                                    }
                                                    y0: {
                                                        type: int
                                                        description: "Starting row"
                                                        minOccurs: 1
                                                        maxOccurs: 1
                                                    }
                                                    x1: {
                                                        type: int
                                                        description: "Ending column; optional if width is specified"
                                                        minOccurs: 0
                                                        maxOccurs: 1
                                                    }
                                                    y1: {
                                                        type: int
                                                        description: "Ending row; optional if height is specified"
                                                        minOccurs: 0
                                                        maxOccurs: 1
                                                    }
                                                    width: {
                                                        type: int
                                                        description: "number of columns; optional if x1 is specified"
                                                        minOccurs: 0
                                                        maxOccurs: 1
                                                    }
                                                    height: {
                                                        type: int
                                                        description: "number of rows; optional if y1 is specified"
                                                        minOccurs: 0
                                                        maxOccurs: 1
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
    #
    # Linearity for a Ccd
    #
    Linearity: {
        type: Policy
        dictionary: {
            target: "LinearityList"
            definitions: {
                Ccd: {
                    type: policy
                    dictionary: {
                        target: Ccd
                        definitions: {
                            serial: {
                                type: int
                                description: "Detector's serial number"
                                minOccurs: 0
                                maxOccurs: 1
                                default: -1
                            }
                            Amp: {
                                type: policy
                                dictionary: {
                                    target: Amp
                                    definitions: {
                                        serial: {
                                            type: int
                                            description: "Serial number for this Amp"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: -1
                                        }
                                        type: {
                                            type: string
                                            description: "Type of non-linearity correction to be applied"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            allowed: {
                                                value: "PROPORTIONAL"
                                                description: "Correction is linearily proportional to the signal"
                                            }
                                            default: "PROPORTIONAL"
                                        }
                                        intensityUnits: {
                                            type: string
                                            description: "Units of intensity when nonlinearity is corrected"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            allowed: {
                                                value: "DN"
                                                description: "Corrections are calculated after gain correction"
                                            }
                                            allowed: {
                                                value: "ELECTRONS"
                                                description: "Corrections are calculated before gain correction"
                                            }
                                            default: "DN"
                                        }
                                        threshold: {
                                            type: double
                                            description: "DN for onset of non-linearity"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: 1e30
                                        }
                                        maxCorrectable: {
                                            type: double
                                            description: "Maximum DN that can be corrected"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: 1e30
                                        }
                                        coefficient: {
                                            type: double
                                            description: "Linearity coefficient (meaning implied by type)"
                                            minOccurs: 0
                                            maxOccurs: 1
                                            default: 0.0
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
