#!/bin/bash
#auto set the config in of test_mag
#cd glee_samp
for i in `seq 1 48`;do
     rm samp${i}/test_mag/galfit.*
     cp galfit.feedme samp${i}/test_mag
     cp gal.sh samp${i}/test_mag
done

for i in `seq 1 6`;do
  for j in `seq 1 4`;do
      #echo $(((${i}-1)*8+${j}))
      cd samp$(((${i}-1)*8+${j}))     
      cd test_mag
      sed "s/5) 2.0000      1/5) 2.0000      0/g" galfit.feedme > galfit_n.feedme   
      cd ../../
  done
done
for i in `seq 1 6`;do
  for j in `seq 1 4`;do
      #echo $(((${i}-1)*8+${j}+4))
      cd samp$(((${i}-1)*8+${j}+4))
      cd test_mag
      sed "s/5) 2.0000      1/5) 4.0000      0/g" galfit.feedme > galfit_n.feedme   
      cd ../../
  done
done

