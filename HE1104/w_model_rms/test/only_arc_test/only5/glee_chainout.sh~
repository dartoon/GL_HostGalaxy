#!/bin/bash
#cat chain_NO
python glee_chain.py
mkdir test_mag
i=1
cat chain_NO| while read line
do   
   #echo $i 
   glee -S $line HE5       #should change to the right file
   glee -f 2 HE5_*$line    #should change to the right file
   mv HE5*${line}_es001_sr.fits gal${i}.fits
   rm HE5*${line}_es001_im.fits
   i=$((i+1))  
done
rm HE5_00* chain_NO    #file name to output
mv gal*.fits ./test_mag
#cd test_mag
#./gal.sh
