import numpy as np
import pyfits


filename='rms.fits'
sr = pyfits.open(filename)[0].data.copy()
cell=np.ones([len(sr),len(sr)])
for m in range(len(sr)):
   for n in range(len(sr)):
	if sr[m,n]>0:
	    cell[m,n]=0
for m in range(2):
   for n in range(2):
     cell[len(sr)/2+m,len(sr)/2+n]=1
     cell[len(sr)/2+m,len(sr)/2-n]=1
     cell[len(sr)/2-m,len(sr)/2+n]=1
     cell[len(sr)/2-m,len(sr)/2-n]=1
pyfits.PrimaryHDU(cell).writeto('mask.fits',clobber=True)	
			
